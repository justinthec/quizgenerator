<div class="page-header">
  <h1>
    Question Bank 
    <small>All of the Questions show up here.</small>
    <%= link_to '+', new_question_path, class: "circle-button btn btn-primary btn-lg pull-right" %>
  </h1>
</div>
<div id= "questions-container" class="row">
<% @questions.each do |question| %>
  <div class="question col-6 col-sm-6 col-lg-4">
    <div class="panel question-panel">
      <div class="panel-heading"><h4><%= question.question %></h4></div>
      <div class="panel-body"> 
        <p><b>A: </b><%= question.answer_a %></p>
        <p><b>B: </b><%= question.answer_b %></p>
        <p><b>C: </b><%= question.answer_c %></p>
        <p><b>D: </b><%= question.answer_d %></p>
        <div class="controls pull-right">
          <%= link_to 'Edit', edit_question_path(question), class:"question-panel-link" %> | 
          <%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure you want to delete this question?' }, class:"question-panel-link" %>
        </div>
      </div>

      <%= link_to(question) do %>
        <span class="question-panel-show"></span>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<br />


