<div class="page-header">
  <h1>
    Question Bank 
    <small>All of the Questions show up here.</small>
    <%= link_to '+', new_question_path, class: "circle-button btn btn-primary btn-lg pull-right" %>
  </h1>
</div>
<div class="row">
<% @questions.each do |question| %>
  <div class="col-sm-6 col-6 col-lg-4">
    <div class="panel question">
      <div class="panel-heading"><h4><%= question.question %></h4></div>
      <div class="panel-body"> 
        <p><%= question.answer %></p>
        <div class="controls pull-right">
          <%= link_to 'Edit', edit_question_path(question), class:"question-link" %> | 
          <%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure you want to delete this question?' }, class:"question-link" %>
        </div>
      </div>

      <%= link_to(question) do %>
        <span class="question-show"></span>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<br />


